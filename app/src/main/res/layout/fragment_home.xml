<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.HomeFragment">

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:cardCornerRadius="@dimen/cardCornerRadius"
             app:cardElevation="0dp"
             android:layout_margin="15dp">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">
                 <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/altoImageViewHome"
                     android:src="@drawable/logo_ar4"
                     />
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:background="@color/colorPrimary"/>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/inicio_frag_tv_que_es"
                     android:textStyle="bold"
                     android:textSize="@dimen/Tamaniotitulo"
                     android:textColor="@color/colorPrimaryDark"
                     android:layout_marginRight="@dimen/MarginHomesubtitle"
                     android:layout_marginLeft="@dimen/MarginHomesubtitle"
                     android:layout_marginTop="@dimen/MarginHomesubtitle"/>


                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:background="@color/colorPrimary"
                     android:layout_marginTop="10dp"/>

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/inicio_frag_tv_que_es_resp"
                     android:textSize="@dimen/TamanioSubtitle"
                     android:textColor="@color/colorPrimary"
                     android:layout_marginRight="@dimen/MarginHomesubtitle"
                     android:layout_marginLeft="@dimen/MarginHomesubtitle"
                     android:layout_marginTop="@dimen/MarginHomesubtitle"/>

                 <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/altoImageViewHome"
                     android:src="@drawable/logo_ar2"
                     android:layout_marginTop="15dp"
                     />
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:background="@color/colorPrimary"/>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/inicio_frag_tv_por_que"
                     android:textStyle="bold"
                     android:textSize="@dimen/Tamaniotitulo"
                     android:textColor="@color/colorPrimaryDark"
                     android:layout_marginRight="@dimen/MarginHomesubtitle"
                     android:layout_marginLeft="@dimen/MarginHomesubtitle"
                     android:layout_marginTop="@dimen/MarginHomesubtitle"/>


                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:background="@color/colorPrimary"
                     android:layout_marginTop="10dp"/>

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/inicio_frag_tv_por_que_resp"
                     android:textSize="@dimen/TamanioSubtitle"
                     android:textColor="@color/colorPrimary"
                     android:layout_marginRight="@dimen/MarginHomesubtitle"
                     android:layout_marginLeft="@dimen/MarginHomesubtitle"
                     android:layout_marginTop="@dimen/MarginHomesubtitle"/>

             </LinearLayout>



         </androidx.cardview.widget.CardView>
     </LinearLayout>

 </ScrollView>


</FrameLayout>